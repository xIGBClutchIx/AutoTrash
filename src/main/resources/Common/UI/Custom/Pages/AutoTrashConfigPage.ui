$C = "../Common.ui";

$C.@PageOverlay {}

$C.@DecoratedContainer {
    Anchor: (Width: 700, Height: 820);

  #Title {
    Label {
      Style: (
        ...$C.@TitleStyle,
        HorizontalAlignment: Center,
      );
      Text: "Auto Trash";
      Padding: (Horizontal: 19);
    }
  }

  #Content {
    LayoutMode: Top;
    Padding: (Full: 16);

    Group {
      LayoutMode: Top;
      Anchor: (Bottom: 16);
      Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);
      Padding: (Full: 12);

      Label {
        Text: "Toggles";
        Style: (RenderBold: true, RenderUppercase: true, TextColor: #878e9c, FontSize: 13);
        Anchor: (Bottom: 8);
      }

      Group #EnabledRow {
        LayoutMode: Left;
        Anchor: (Bottom: 8);

        Label {
          Text: "Enable auto-trash";
          Anchor: (Left: 6, Top: 6, Right: 16);
          Style: $C.@DefaultLabelStyle;
        }

        $C.@CheckBox #CheckBox {}
      }

      Group #NotifyRow {
        LayoutMode: Left;
        Anchor: (Bottom: 8);

        Label {
          Text: "Red notification text";
          Anchor: (Left: 6, Top: 6, Right: 16);
          Style: $C.@DefaultLabelStyle;
        }

        $C.@CheckBox #CheckBox {}
      }

    }

    Group {
      LayoutMode: Top;
      Anchor: (Bottom: 16);
      Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);
      Padding: (Full: 12);

      Group {
        Anchor: (Left: 0, Bottom: 8, Right: 0, Height: 28);

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Top: 0, Bottom: 0, Right: 150);

          Label {
            Text: "Profiles";
            Style: (RenderBold: true, RenderUppercase: true, TextColor: #878e9c, FontSize: 13);
            Anchor: (Right: 12);
          }

          Label #ProfileCount {
            Text: "Profiles: 1/50";
            Style: (FontSize: 12, TextColor: #6e7da1);
            Anchor: (Top: 2, Right: 12);
          }

          Label #ProfileWarning {
            Text: "Profile limit reached";
            Style: (FontSize: 12, TextColor: #c36d2a, RenderBold: true);
            Anchor: (Top: 2, Right: 12);
            Visible: false;
          }

          Group {
            Anchor: (Right: 12, Width: 40, Height: 28);
          }
        }

        $C.@SmallSecondaryTextButton #ProfileScanButton {
          Anchor: (Top: 0, Right: 0, Width: 140, Height: 28);
          Text: "FORCE CLEAN";
        }
      }

      Label {
        Text: "Pick a profile, then manage it below.";
        Style: (FontSize: 12, TextColor: #6e7da1);
        Anchor: (Bottom: 8);
      }

      Group {
        Anchor: (Left: 0, Bottom: 8, Right: 0, Height: 36);

        $C.@DropdownBox #ProfileDropdown {
          Anchor: (Left: 0, Bottom: 0, Right: 128, Height: 36);
        }

        $C.@SmallSecondaryTextButton #ProfileDeleteButton {
          Anchor: (Bottom: 4, Right: 0, Width: 120, Height: 28);
          Text: "DELETE";
        }
      }

      Group {
        Anchor: (Left: 0, Bottom: 4, Right: 0, Height: 32);

        $C.@TextField #ProfileNameInput {
          Anchor: (Left: 0, Bottom: 0, Right: 384, Height: 32);
          PlaceholderText: "Profile name";
        }

        $C.@SmallSecondaryTextButton #ProfileAddButton {
          Anchor: (Bottom: 2, Right: 256, Width: 120, Height: 28);
          Text: "CREATE";
        }

        $C.@SmallSecondaryTextButton #ProfileDuplicateButton {
          Anchor: (Bottom: 2, Right: 128, Width: 120, Height: 28);
          Text: "DUPLICATE";
        }

        $C.@SmallSecondaryTextButton #ProfileRenameButton {
          Anchor: (Bottom: 2, Right: 0, Width: 120, Height: 28);
          Text: "RENAME";
        }
      }
    }

    Group {
      LayoutMode: Top;
      Anchor: (Bottom: 0);
      Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);
      Padding: (Full: 12);

      Group {
        Anchor: (Left: 0, Bottom: 8, Right: 0, Height: 28);

        Label {
          Text: "Auto-trash items";
          Style: (RenderBold: true, RenderUppercase: true, TextColor: #878e9c, FontSize: 13);
          Anchor: (Right: 12);
        }

        $C.@SmallSecondaryTextButton #ItemAddButton {
          Anchor: (Top: 0, Right: 0, Width: 140, Height: 28);
          Text: "ADD HELD";
        }
      }

      Label #ItemHelp {
        Text: "Hold an item and press add. Click a slot to remove.";
        Style: (FontSize: 12, TextColor: #6e7da1);
        Anchor: (Bottom: 8);
      }

      Group #ItemList {
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        Anchor: (Height: 300);

        Padding: (Top: 8, Left: 8, Right: 8);

        Group #ItemGrid {
          LayoutMode: LeftCenterWrap;
        }
      }
    }
  }
}

$C.@BackButton {}
